<openerp>
    <data>
        <template name="Store" id="index" page="True">
            <t t-call="website.layout">
                <t t-set ="title">Online_store</t>
                        <div class="container">
                            <h1>Our products</h1>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Product</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                        <t t-foreach="products" t-as="product">
                                            <tbody>
                                            <tr>
                                                 <td><t t-esc="product.id"/></td>
                                                 <td><t t-esc="product.name"/></td>
                                                 <td><t t-esc="product.list_price"/></td>
                                                 <td><button type="button" class="btn btn-success">Подтвердить заказ</button></td>
                                            </tr>
                                      </tbody>
                                </t>
                                </table>
                            <div class="oe_structure"/>
                        </div>
                 </t>
        </template>
    </data>
</openerp>